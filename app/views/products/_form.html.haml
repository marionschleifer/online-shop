= form_for(@product) do |f|
  %div.field
    = f.label :title
    %br
    = f.text_field :title
  %div.field
    = f.label :description
    %br
    = f.text_area :description
  %div.field
    = f.label :image_url
    %br
    = f.text_field :image_url
  %div.field
    = f.label :price
    %br
    = f.text_field :price
  %div.actions
    = f.submit